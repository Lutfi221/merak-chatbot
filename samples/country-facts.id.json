{
  "triggers": {
    "/halo": "/hello",
    "/fakta": "/start",
    "/nama": "/name",
    "/ibukota": "/capital",
    "/bantuan": "/help"
  },
  "pages": {
    "/start": [
      {
        "clearVariables": true,
        "content": "Dapatkan fakta-fakta negara! \n1. Cari berdasarkan nama\n2. Cari berdasarkan ibu kota",
        "links": { "1": "/name", "2": "/capital" }
      }
    ],
    "/hello": [
      {
        "content": "Halo!",
        "next": "/start"
      }
    ],
    "/name": [
      { "name": "search-by", "value": "name" },
      {
        "content": "Tulis nama negara dalam bahasa Inggris. Tidak perlu lengkap.\n\nContoh: 'indonesia', 'indone', 'america', 'japan'.",
        "name": "query",
        "userInput": true,
        "userInputValidator": "^[\\D\\S]+$"
      },
      { "content": "Fetching country's info...", "next": "/fetch" }
    ],
    "/capital": [
      { "name": "search-by", "value": "capital" },
      {
        "content": "Tulis nama ibu kota negara dalam bahasa Inggris. Tidak perlu lengkap.\n\nContoh: 'jakarta', 'jakart', 'washington', 'tokyo'.",
        "name": "query",
        "userInput": true,
        "userInputValidator": "^[\\D\\S]+$"
      },
      { "content": "Fetching country's info...", "next": "/fetch" }
    ],
    "/fetch": [
      {
        "name": "country",
        "api": "https://restcountries.eu/rest/v2/{{search-by}}/{{query}}",
        "content": "Name: {{country.0.name}}\nCapital: {{country.0.capital}}\nPopulasi: {{country.0.population}}\nFlag: {{country.0.flag}}"
      }
    ],
    "/help": [{ "content": "Coba tulis /halo , /nama ,atau /ibukota" }]
  }
}
